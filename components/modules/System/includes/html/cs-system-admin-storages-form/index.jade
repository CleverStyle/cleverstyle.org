dom-module#cs-system-admin-storages-form
	template
		form(is="cs-form")
			label(tooltip="[[L.storage_url]]")
				[[L.storage_url]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{storage.url}}")
			label(tooltip="[[L.storage_host_info]]")
				[[L.storage_host]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{storage.host}}")
			label(tooltip="[[L.storage_connection]]")
				[[L.storage_connection]]
				cs-tooltip
			select(is="cs-select" selected="{{storage.connection}}" size="5")
				template(is="dom-repeat" items="[[engines]]")
					option [[item]]
			label(tooltip="[[L.storage_user_info]]")
				[[L.storage_user]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{storage.user}}")
			label(tooltip="[[L.storage_password_info]]")
				[[L.storage_password]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{storage.password}}")
			div
				button(is="cs-button" type="button" primary on-tap="_save" disabled="[[!and(storage.host, storage.connection)]]") [[L.save]]
				button(is="cs-button" type="button" on-tap="_test_connection" icon="signal" disabled="[[!and(storage.host, storage.connection)]]") [[L.test_connection]]
	script(src="script.js")
