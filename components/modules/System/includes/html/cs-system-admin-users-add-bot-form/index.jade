dom-module#cs-system-admin-users-add-bot-form
	template
		form(is="cs-form")
			label [[L.bot_name]]
			input(is="cs-input-text" type="text" value="{{name}}")
			label(tooltip="[[L.bot_user_agent_info]]")
				[[L.bot_user_agent]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{user_agent}}")
			label(tooltip="[[L.bot_ip_info]]")
				[[L.bot_ip]]
				cs-tooltip
			input(is="cs-input-text" type="text" value="{{ip}}")
			div
				button(is="cs-button" primary on-tap="save" disabled="[[!can_save]]") [[L.save]]
	script(src="script.js")
