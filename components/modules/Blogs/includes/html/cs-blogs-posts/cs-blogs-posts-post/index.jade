dom-module#cs-blogs-posts-post
	template
		style(include="basic-styles")
		article
			header
				a(href="[[post.url]]")
					h1 [[post.title]]
				template(is="dom-if" if="[[post.articleSection.length]]")
					p
						cs-icon(icon="bookmark")
						template(is="dom-repeat" items="[[post.articleSection]]" as="section")
							[[if(index, '\, ', ' ')]]
							a(href="[[sections_path(index)]]") [[section]]
			div(inner-h-t-m-l="[[post.short_content]]")
			footer
				hr
				p
					time [[post.datetime]]
					= ' '
					cs-icon(icon="user")
					= ' '
					[[post.author.name]]
					= ' '
					template(is="dom-if" if="[[settings.comments_enabled]]")
						a(href="[[post.url]]#comments")
							cs-icon(icon="comments")
							= ' '
							cs-comments-count(module="Blogs" item="[[post.id]]")
							= ' '
					a(href="[[post.url]]")
						cs-icon(icon="angle-double-right")
						= ' '
						[[L.read_more]]
	script(src="script.js")
