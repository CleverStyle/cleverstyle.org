style
	//- Hack, bug in Polymer, font not loaded from stylesheet import below, so it was moved here
	| @font-face{font-family:'FontAwesome';src:url('/includes/html/CleverStyle Widgets/cs-icon/fontawesome-webfont.woff') format('woff');font-weight:normal;font-style:normal}
dom-module#cs-icon
	link(rel="import" href="style.css" type="css")
	template
		span.fa-stack(hidden="[[!multiple_icons.length]]")
			template(is="dom-repeat" items="[[multiple_icons]]")
				i(class$="[[item]]")
		i(class$="[[single_icon]]" hidden="[[!single_icon]]")
	script(src="script.js")
